<%- include('../partials/header.ejs', { user }) %> 
<!-- favorites page -->
<div class="container">
    <h1 class="text-center">Favorites Page</h1>
    <p class="text-center">
      <a href="/">Back to Homepage</a>
    </p>
    <% faveWords.forEach(function(faveWord) { %>
      <div class="well">
          <h2><%= faveWord.word %></h2>
          <p><%= faveWord.definition %></p>

          <form method="POST" action="/users/favorites/<%= faveWord.id %>/?_method=DELETE">
            <button class="btn btn-primary" style= "color: lightseagreen;" type="submit">Delete From Favorites</button>
          </form>
      </div> 
  </div>       
    <% }); %>

